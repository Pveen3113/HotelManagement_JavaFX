<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.teest.MainController"
      stylesheets="@style.css"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: #2c3e50; -fx-padding: 50;">

    <!-- System Title -->
    <Label text="YR Hospitality"
           style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <!-- Welcome Message -->
    <Label text="🌟 Welcome to YR Hospitality – where luxury meets comfort! 🌿"
           style="-fx-font-size: 18px; -fx-text-fill: #ecf0f1;"/>

    <!-- Fun Fact -->
    <Label text="🛎️ Fun Fact: Our hotel is known for having the coziest rooms and the friendliest staff in the city!"
           wrapText="true"
           style="-fx-font-size: 14px; -fx-text-fill: #bdc3c7; -fx-padding: 0 30 20 30;"/>

    <!-- Navigation Menu -->
    <VBox spacing="20" alignment="CENTER"
          style="-fx-background-color: #34495e; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 0, 10);">

        <Button text="Rooms" onAction="#goToRooms"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 16px; -fx-pref-width: 200; -fx-pref-height: 50; -fx-background-radius: 5;"/>

        <Button text="Guests" onAction="#goToGuests"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 16px; -fx-pref-width: 200; -fx-pref-height: 50; -fx-background-radius: 5;"/>

        <Button text="Bookings" onAction="#goToBookings"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 16px; -fx-pref-width: 200; -fx-pref-height: 50; -fx-background-radius: 5;"/>

        <Button text="Payments" onAction="#goToPayments"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 16px; -fx-pref-width: 200; -fx-pref-height: 50; -fx-background-radius: 5;"/>
    </VBox>
</VBox>
