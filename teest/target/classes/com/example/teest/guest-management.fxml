<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.teest.GuestController"
      spacing="20" alignment="CENTER"
      stylesheets="@style.css"
      style="-fx-background-color: #2c3e50; -fx-padding: 50;">

    <!-- Title Label -->
    <Label text="Guest Registration"
           style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <!-- Guest Name Field -->
    <TextField fx:id="nameField" promptText="Guest Name"
               style="-fx-font-size: 14px; -fx-pref-width: 300; -fx-background-radius: 5;"/>

    <!-- Identification Number Field -->
    <TextField fx:id="idField" promptText="Identification Number"
               style="-fx-font-size: 14px; -fx-pref-width: 300; -fx-background-radius: 5;"/>

    <!-- Contact Number Field -->
    <TextField fx:id="contactField" promptText="Contact Number"
               style="-fx-font-size: 14px; -fx-pref-width: 300; -fx-background-radius: 5;"/>

    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Add Guest" onAction="#addGuest"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;"/>
        <Button text="View Guests" onAction="#goToViewGuests"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;"/>
        <Button text="Back" onAction="#goToMainMenu"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;"/>
    </HBox>

</VBox>
