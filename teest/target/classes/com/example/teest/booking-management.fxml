<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Label?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.teest.BookingController"
      stylesheets="@style.css"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: #2c3e50; -fx-padding: 50;">

    <Label text="Bookings Portal"
           style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <!-- Description Message -->
    <Label text="ðŸ“… Effortlessly manage and track all your bookings in one place."
           style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1;"/>

    <!-- Buttons -->
    <VBox spacing="20" alignment="CENTER"
        style="-fx-background-color: #34495e; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 0, 10);">


        <!-- Make Booking Button -->
        <Button text="Make Bookings" onAction="#openMakeBookingPopup"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 16px;  -fx-pref-width: 200; -fx-pref-height: 50; -fx-background-radius: 5; -fx-cursor: hand;"/>

        <!-- View Bookings Button -->
        <Button text="View Bookings" onAction="#viewBookings"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 16px;  -fx-pref-width: 200; -fx-pref-height: 50; -fx-background-radius: 5; -fx-cursor: hand;"/>

        <!-- Back Button -->
        <Button text="Back" onAction="#goBack"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 16px;  -fx-pref-width: 200; -fx-pref-height: 50; -fx-background-radius: 5; -fx-cursor: hand;"/>

    </VBox>
</VBox>
