<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.teest.RoomsPageController"
      stylesheets="@style.css"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: #2c3e50; -fx-padding: 50;">

    <!-- Title -->
    <Label text="Rooms Management"
           style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <!-- Description Message -->
    <Label text="🛏️ Manage room inventory, pricing, and availability in one place."
           style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1;"/>

    <!-- Menu Box for Payment Options -->
    <VBox spacing="20" alignment="CENTER"
          style="-fx-background-color: #34495e; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 0, 10);">

        <Button text="Add Rooms" onAction="#showAddRoomForm"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 16px; -fx-pref-width: 250; -fx-pref-height: 50; -fx-background-radius: 5;"/>

        <Button text="View Rooms" onAction="#goToViewRooms"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 16px; -fx-pref-width: 250; -fx-pref-height: 50; -fx-background-radius: 5;"/>

        <Button text="Back" onAction="#goBack"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 16px; -fx-pref-width: 250; -fx-pref-height: 50; -fx-background-radius: 5;"/>
    </VBox>
</VBox>
