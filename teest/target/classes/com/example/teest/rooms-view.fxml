<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.teest.RoomsController"
      stylesheets="@style.css"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: #2c3e50; -fx-padding: 50;">

    <!-- Page Title -->
    <Label text="Add New Room"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />

    <!-- Input Fields -->
    <VBox spacing="15" alignment="CENTER"
          style="-fx-background-color: #34495e; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 0, 10);">

        <TextField fx:id="roomTypeField" promptText="Room Type"
                   style="-fx-font-size: 14px; -fx-pref-width: 300; -fx-background-radius: 5;"/>

        <TextField fx:id="priceField" promptText="Price"
                   style="-fx-font-size: 14px; -fx-pref-width: 300; -fx-background-radius: 5;"/>

        <TextField fx:id="availabilityField" promptText="Availability"
                   style="-fx-font-size: 14px; -fx-pref-width: 300; -fx-background-radius: 5;"/>

        <Button text="Save" onAction="#saveRoom"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 150; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;" />
    </VBox>
</VBox>
