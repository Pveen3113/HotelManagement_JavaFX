<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.teest.PaymentManagement"
      style="-fx-background-color: #2c3e50; -fx-padding: 30;">

    <!-- Title -->
    <Label text="Booking Payments"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <!-- ListView Container -->
    <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0, 0, 5);">
        <Label text="Select a Booking:" style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1;"/>
        <ListView fx:id="bookingListView" prefHeight="200" prefWidth="400"
                  style="-fx-background-color: #ecf0f1; -fx-border-color: transparent;"/>
    </VBox>

    <!-- Button Controls -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Make Payment" onAction="#handleMakePayment"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-pref-width: 150; -fx-pref-height: 40; -fx-background-radius: 5;"/>

        <Button text="Payment Details" onAction="#handleViewPaymentDetails"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-pref-width: 150; -fx-pref-height: 40; -fx-background-radius: 5;"/>

        <Button text="Back" onAction="#handleBack"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-pref-width: 150; -fx-pref-height: 40; -fx-background-radius: 5;"/>
    </HBox>

</VBox>
