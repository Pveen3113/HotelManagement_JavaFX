<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.teest.GuestController"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">

    <!-- Add Guest Form -->
    <TextField fx:id="nameField" promptText="Guest Name" />
    <TextField fx:id="idField" promptText="Identification Number" />
    <TextField fx:id="contactField" promptText="Contact Number" />

    <Button text="Add Guest" onAction="#addGuest"/>

    <!-- View and Delete Guests -->
    <Button text="View Guests" onAction="#goToViewGuests"/>

    <ListView fx:id="guestListView" prefHeight="200" onMouseClicked="#viewGuestDetails"/>

</VBox>