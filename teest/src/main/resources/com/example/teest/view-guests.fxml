<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.teest.ViewGuestsController"
      spacing="20" alignment="CENTER"
      stylesheets="@style.css"
      style="-fx-background-color: #2c3e50; -fx-padding: 30;">

    <!-- ListView Container -->
    <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0, 0, 5);">
        <Label text="Select a Guest:" style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1;"/>
        <ListView fx:id="guestListView" prefHeight="200" prefWidth="400"
                  style="-fx-background-color: #ecf0f1; -fx-border-color: transparent;"/>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Delete Selected Guest" onAction="#deleteSelectedGuest"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-pref-width: 160; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;"/>

        <Button text="Update Selected Guest" onAction="#updateSelectedGuest"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-pref-width: 160; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;"/>

        <Button text="View Guest Details" onAction="#viewGuestDetails"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-pref-width: 160; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;"/>

        <Button text="Back" onAction="#goBackToGuestPage"
                style="-fx-background-color: #A7B49E; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-pref-width: 160; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;"/>

    </HBox>



</VBox>
